generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id               String @id @default(uuid())
  categoria        String
  eventos          Evento[]

  @@map("categorias")
}

model Local {
    id        String @id @default(uuid())
    local     String 
    endereco  String 
    eventos Evento[]
    
    @@map("locais")
}

model Evento {
    id           String       @id @default(uuid())
    nome         String 
    data         DateTime
    descricao    String
    categoria    Categoria    @relation(fields: [categoria_id], references: [id])
    categoria_id String
    local        Local        @relation(fields: [local_id], references: [id])
    local_id     String


    @@map("eventos")
    }
